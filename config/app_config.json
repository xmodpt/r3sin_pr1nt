{
  "file_management": {
    "allowed_extensions": [
      ".ctb",
      ".cbddlp",
      ".pwmx",
      ".pwmo",
      ".pwms",
      ".pws",
      ".pw0",
      ".pwx"
    ],
    "auto_cleanup": false,
    "max_age_days": 30,
    "max_files": 50
  },
  "interface": {
    "console_max_lines": 50,
    "theme": "dark",
    "update_interval": 3000,
    "webcam_enabled": false
  },
  "printer": {
    "baudrate": 115200,
    "firmware_version": "V4.13",
    "serial_port": "/dev/serial0",
    "timeout": 5.0
  },
  "usb": {
    "auto_start": true,
    "image_file": "/piusb.bin",
    "mount_point": "/mnt/usb_share"
  }
}