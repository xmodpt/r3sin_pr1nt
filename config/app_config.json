{
  "printer": {
    "serial_port": "/dev/serial0",
    "baudrate": 115200,
    "timeout": 5.0,
    "firmware_version": "V4.13"
  },
  "usb": {
    "mount_point": "/mnt/usb_share",
    "image_file": "/piusb.bin",
    "auto_start": true
  },
  "interface": {
    "theme": "dark",
    "update_interval": 3000,
    "console_max_lines": 50,
    "webcam_enabled": false
  },
  "file_management": {
    "max_files": 50,
    "max_age_days": 30,
    "auto_cleanup": false,
    "allowed_extensions": [
      ".ctb",
      ".cbddlp",
      ".pwmx",
      ".pwmo",
      ".pwms",
      ".pws",
      ".pw0",
      ".pwx"
    ]
  }
}